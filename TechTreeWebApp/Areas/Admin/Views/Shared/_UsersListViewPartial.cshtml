@model TechTreeWebApp.Areas.Admin.Models.UsersCategoryListModel;
@using TechTreeWebApp.Comparers;

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.UsersCollection != null)
        {
            @foreach(var user in Model.UsersCollection)
            {
             <tr>
                 <td style="text-align:center">
                     <!-- insert if statement here -->
                        @if(Model.UsersSelected != null && Model.UsersSelected.Contains(user, new CompareUser())) //.contains<UserModel>(value, comparer)
                        {
                            <input type = "checkbox" id = "UsersSelected" class="form-check-input" checked value="@user.Id">
                        } else
                        {                            
                            <input type="checkbox" id="UsersSelected" class="form-check-input" value="@user.Id">
                        }
                 </td>
                 <td>@user.FirstName</td>
                 <td>@user.LastName</td>
             </tr>   
            }
        }
    </tbody>
</table>