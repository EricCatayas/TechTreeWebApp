@* We're separating the code that extracts the data and code that displays the data*@
@model IEnumerable<Category> 
@if (Model.Count() > 0)
{

    <div class="row mt-3">
        @foreach (var category in Model)
        {
            <div class="col-md-3">
                 <a href="#" class="RegisterLink text-dark" data-categoryId="@category.Id" style="text-decoration: none;"> @* data-categoryId is an attribute we can use to store and get the categoryId *@
                    <div class="card">
                        <img class="img-thumbnail" src="@category.ThumbnailImagePath" alt="@category.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@category.Title</h5>
                            @if (category.Description.Length > 130)
                            {
                                <p class="card-text">@category.Description.Substring(0,130)...</p>
                            }
                            else
                            {                                
                                <p class="card-text">@category.Description</p>
                            }
                        </div>
                    </div>
                 </a>
            </div>
        }
    </div>
}
