@* We're separating the code that extracts the data and code that displays the data*@
<!-- Not list? -->
@model IEnumerable<Category> 
@if (Model.Count() > 0)
{

    <div class="row mt-3">
        @foreach (var category in Model)
        {
            <div class="col-md-3">
                 <a href="#" class="RegisterLink text-dark" data-categoryId="@category.Id"> @* data-categoryId is an attribute we can use to store and get the categoryId *@
                    <div class="card">
                        <!-- card represents a course or category-->
                        <img class="img-thumbnail" src="@category.ThumbnailImagePath" alt="@category.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@category.Title</h5>
                            <p class="card-text">@category.Description</p>
                        </div>
                    </div>
                 </a>
            </div>
        }
    </div>
}
