@* All includes are located in _ViewImports.cshtml *@
@model IEnumerable<Category>

<!-- Hero Section -->
<div class="hero section"> 
    <!-- Refer to site.css for the design referencing -->
    <!-- img-fluid means providing screen size responsizeness -->
    <img class="img-fluid" src="~/Images/HeroImage.png"/>
    <div class="hero-heading"> <!-- contains the heading text -->
        <h2 class="hero-heading-text"> Learn software development at <strong>TechTree</strong></h2>        
        <a id="HeroRegister_btn" class="btn btn-outline-info btn-lg text-light hero-register-button" data-bs-toggle="modal" data-bs-target="#UserRegistrationModal"> Register</a>
    </div>
</div>
<!-- Courses Section -->
<hr class="section-divider"/>
<!-- N: Layout.cshtml href="#CoursesSection" etc when pressed will navigate user down to here-->
<div id="CoursesSection" class="courses section">
    <h3 class="section-header">Courses</h3>
    @{
        const int itemsperRow = 4;
        var count = Model.Count() / itemsperRow; // We want 4 parts displayed per row
        var categoryList = new List<Category>();
    }
    <!-- Extract the Category Data for each row; Linq's' Skip(index) we start from a certain position, then take 4 Data-->
    @for(int i = 0; i <= count; i++)
    {
        categoryList = Model.Skip(i * itemsperRow).Take(itemsperRow).ToList();
                <partial name="_DisplayCardRowPartial" model="categoryList"/>    
    }
</div>
<!-- Contact Us Section -->
<hr class="section-divider" />
<div id="ContactUsSection" class="contact-us section">
    <h3 class="col-md-5 section-header"> Contact Us</h3>
    <div class="col-md-5"> 
        Email us for your inqueries. We'd be happy to discuss with you.
    </div>
    <div class="mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="8" class="form-control"></textarea>

                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>        
            </form>
        </div>
    </div>
</div>
<!-- About Us Section -->
<hr class="section-divider" />
<div id="AboutUsSection" class="about-us section">
    <div class="col-md-5 section-header">About Us</div> 
    <div class="mt-3 mb-5">
        <div class="col-md-5">
            <p>
                <strong>TechTree</strong>, developed by Eric Jay Catayas, offers a comprehensive online learning platform for users. The administrator area provides seamless uploading and management of online courses and materials. 
            </p>
        </div>
    </div>
</div>
